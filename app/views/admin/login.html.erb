<% form_tag do %>
  <fieldset>
    <legend>Please log in:</legend>

    <div class="field">
      <label for="name">User: </label>
      <%= text_field_tag :name %>
    </div>

    <div class="field">
      <label for="password">Password:</label>
      <%= password_field_tag :password %>
    </div>

    <div>
      <%= submit_tag "login" %>
    </div>
  </fieldset>
<% end %>
